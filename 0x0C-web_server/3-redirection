#!/usr/bin/env bash
# Redirect to another page
# The redirection must be a â€œ301 Moved Permanently

# Install Nginx web server
sudo apt-get update
sudo apt-get install -y nginx

# Create a custom configuration file for the redirection to prevent loss of data
sudo sh -c "cat > /etc/nginx/conf.d/redirect.conf << EOL
server {
    listen 80;
    server_name localhost;

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }
}
EOL"

# Reload Nginx configuration to apply changes
sudo service nginx reload

# Verify the redirection
curl -sI http://localhost/redirect_me/
